<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>SadadPortlets</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<listener>
		<description>Cache Initializer for whole Portlet Application.</description>
		<display-name>ApplicationCacheInitializer</display-name>
		<listener-class>com.sadad.portal.common.cache.ApplicationCacheInitializer</listener-class>
	</listener>
	<servlet>
		<description>Provides the list of banks or billers in form of JSON</description>
		<display-name>JSON Data Provider</display-name>
		<servlet-name>JsonData</servlet-name>
		<servlet-class>com.sadad.portal.common.servlet.JsonData</servlet-class>
		<enabled>true</enabled>
		<async-supported>true</async-supported>
	</servlet>
	<servlet-mapping>
		<servlet-name>JsonData</servlet-name>
		<url-pattern>/jsonData/*</url-pattern>
	</servlet-mapping>
</web-app>