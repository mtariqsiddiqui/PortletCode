<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- This POM file installs the jar files from the Server installation into the local repository -->
	<!-- Open the Run Configurations dialog, create a new Maven Build configuration -->
	<!-- Hit the Browse File System button and find the folder containing the pom.xml file -->
	<!-- Type "install" in the Goals text field -->
	<!-- Set value of the parameter serverInstallationFolder with the path of the portal server installation folder,i.e "C:/WebSphere/PortalServer" -->
	<!-- Hit the Run button -->
    <!-- To run with command line use syntax -->
    <!-- mvn install -f "Location of the pom.xml file ,i.e. C:/maven/pom.xml" -D serverInstallationFolder="Location of the portal server installation folder,i.e. C:/WebSphere/PortalServer"-->
    <licenses>
		<license>
			<name>IBM International License Agreement for Non-Warranted Programs</name>
			<url>http://public.dhe.ibm.com/ibmdl/export/pub/software/websphere/wasdev/maven/licenses/L-JTHS-8SZMHX/HTML/</url>
			<distribution>repo</distribution>
			<comments>Additional notices http://public.dhe.ibm.com/ibmdl/export/pub/software/websphere/wasdev/maven/licenses/L-JTHS-8SZMHX/HTML/notices.html</comments>
		</license>
	</licenses>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.ibm.tools.target</groupId>
	<artifactId>portal.installer</artifactId>
	<version>8.0.0</version>
	<packaging>pom</packaging>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.3.1</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<id>install-artifacts-com.ibm.portal:core-api</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>install</phase>
						<configuration>
							<file>${wps.install.dir}doc/compile/public_spi.jar</file>
							<groupId>com.ibm.portal</groupId>
							<artifactId>core-api</artifactId>
							<version>8.0.0.1</version>
							<packaging>jar</packaging>
						</configuration>
					</execution>
					<execution>
						<id>install-artifacts-com.ibm.content.operations.registry:api</id>
						<goals>
							<goal>install-file</goal>
						</goals>
						<phase>install</phase>
						<configuration>
							<file>${wps.install.dir}lwp04.infra/common.infra/contentoperationsregistry/portal/shared/ext/com.ibm.content.operations.registry.jar</file>
							<groupId>com.ibm.content.operations.registry</groupId>
							<artifactId>api</artifactId>
							<version>3.0.0</version>
							<packaging>jar</packaging>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<properties>
		<wps.install.dir>${serverInstallationFolder}/</wps.install.dir>
	</properties>
</project>